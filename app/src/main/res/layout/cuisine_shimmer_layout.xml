<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/recipe_shimmmer_title"
        android:layout_width="172dp"
        android:layout_height="28dp"
        android:background="#dddddd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/recipe_shimmmer_image_1"
        android:layout_width="@dimen/recipe_item_image_size"
        android:layout_height="@dimen/recipe_item_image_size"
        android:layout_marginTop="12dp"
        android:background="#dddddd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recipe_shimmmer_title" />

    <View
        android:id="@+id/recipe_shimmmer_title_1"
        android:layout_width="@dimen/recipe_item_image_size"
        android:layout_height="@dimen/cuisine_shimmer_name_height"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="#dddddd"
        app:layout_constraintEnd_toEndOf="@id/recipe_shimmmer_image_1"
        app:layout_constraintStart_toStartOf="@id/recipe_shimmmer_image_1"
        app:layout_constraintTop_toBottomOf="@id/recipe_shimmmer_image_1" />

    <View
        android:id="@+id/recipe_shimmmer_image_2"
        android:layout_width="@dimen/recipe_item_image_size"
        android:layout_height="@dimen/recipe_item_image_size"
        android:layout_marginStart="8dp"
        android:background="#dddddd"
        app:layout_constraintStart_toEndOf="@id/recipe_shimmmer_image_1"
        app:layout_constraintTop_toTopOf="@id/recipe_shimmmer_image_1" />

    <View
        android:id="@+id/recipe_shimmmer_title_2"
        android:layout_width="@dimen/recipe_item_image_size"
        android:layout_height="@dimen/cuisine_shimmer_name_height"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="#dddddd"
        app:layout_constraintEnd_toEndOf="@id/recipe_shimmmer_image_2"
        app:layout_constraintStart_toStartOf="@id/recipe_shimmmer_image_2"
        app:layout_constraintTop_toBottomOf="@id/recipe_shimmmer_image_2" />

    <View
        android:id="@+id/recipe_shimmmer_image_3"
        android:layout_width="@dimen/recipe_item_image_size"
        android:layout_height="@dimen/recipe_item_image_size"
        android:layout_marginStart="8dp"
        android:background="#dddddd"
        app:layout_constraintStart_toEndOf="@id/recipe_shimmmer_image_2"
        app:layout_constraintTop_toTopOf="@id/recipe_shimmmer_image_2" />

    <View
        android:id="@+id/recipe_shimmmer_title_3"
        android:layout_width="@dimen/recipe_item_image_size"
        android:layout_height="@dimen/cuisine_shimmer_name_height"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="#dddddd"
        app:layout_constraintEnd_toEndOf="@id/recipe_shimmmer_image_3"
        app:layout_constraintStart_toStartOf="@id/recipe_shimmmer_image_3"
        app:layout_constraintTop_toBottomOf="@id/recipe_shimmmer_image_3" />
</android.support.constraint.ConstraintLayout>